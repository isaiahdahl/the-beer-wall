<div class="form">
  <div class="text-center">
    <h4 class="text-center">exclusive to real friends</h4>
    <p>to access the beer wall app you gotta prove your friendship by signing up</p>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email, label: false, placeholder: "Email",  required: false, autofocus: true, inner_html: { class: 'username' } %>
        <%= f.input :password, label: false, placeholder: "Password", required: false %>
        <%= f.input :password_confirmation, placeholder: "Confirm Password", label: false, required: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn-block"%>
      </div>
  <% end %>
  <div class="links">
  </div>
</div>
